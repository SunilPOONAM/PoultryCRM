
@using System.Data;
@using PoultryCRM.Models;@model PoultryCRM.Models.Vaccination_tbl
@{
    ViewBag.Title = "Vaccination";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2>Vaccination</h2>
@using (Html.BeginForm("Vaccination", "Flock_Management", FormMethod.Post, new
    {
        enctype = "multipart/form-data"@*, onsubmit = "return myFunction()"*@ }))
{
     <div class="col-md-4">
        <label>Flock:</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
               
                @Html.DropDownListFor(model => model.Flock, new List<SelectListItem>
{
    new SelectListItem{ Text="Select", Value = "" },
}, new { @class = "form-control", Required = "true" })
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <label>Vaccination Date:</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
                @Html.TextBoxFor(model => model.Vaccination_Date, new { @placeholder = "", @class = "form-control", @autocomplete = "off", Required = "true" })
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <label>Vaccine:</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
                @Html.DropDownListFor(model => model.Vaccine, new List<SelectListItem>
{
    new SelectListItem{ Text="Select", Value = "" },
}, new { @class = "form-control", Required = "true" })
            </div>
        </div>
    </div>
 <div class="col-md-4">
        <label>Number Of Chicks:</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
                @Html.TextBoxFor(model => model.Chiks, new { @placeholder = "", @class = "form-control", @autocomplete = "off", Required = "true" })

            </div>
        </div>
    </div>
    <div class="col-md-3">
        <label></label>
        <div class="input-group">


            <input type="submit" class="form-control btn bg-in waves-effect " value=" submit">
        </div>
    </div>
}

