<script type="text/javascript">
    $(document).ready(function () {
        $("bootstrap-select").attr('display', 'none')
        var d = new Date();
        var strDate = d.getDate() + "/" + (d.getMonth() + 1) + "/" + d.getFullYear();
        var n = $("#Vaccination_Date").val(strDate);
    })
    var Flockname = $("#FarmName").val();
   
    $.ajax({
        url: "/Flock_Management/GetFlockName",
        method: "get",
        data: { "Flockname": Flockname },
        success: function (result) {
            var n= result.length
            $.each(result, function (i) {
                $("#Flock").append($("<option></option>").val(result[i]['value']).html(result[i]['text']));
            });
        }
    })

    // for vaccine
    $("#Flock").change(function () {
        var Item = "Vaccine";
        $.ajax({
            url: "/Flock_Management/GetFlockDetails",
            method: "get",
            data: { "Item": Item },
            success: function (result) {
                var n = result.length
                $('#Vaccine option').remove();
                $.each(result, function (i) {
                    $("#Vaccine").append($("<option></option>").val(result[i]['value']).html(result[i]['text']));
                });
            }
        })
    })
    </script>

    



